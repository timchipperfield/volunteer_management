<!DOCTYPE html>
<html>
  <head>
    <title>VolunteerManagement</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- navigation bar and notices + alerts-->

    <nav class="navbar navbar-default">
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <% if admin_signed_in? %>
            <li class="active"><%= link_to "Sign out", destroy_admin_session_path, method: :delete %></li>
            <li class="active"><%= link_to "Volunteers", volunteers_path %></li>
          <% else %>
            <li class="active"><%= link_to "Sign up", new_admin_registration_path %></li>
            <li class="active"><%= link_to "Sign in", new_admin_session_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>



    <% if alert %>
      <div class="alert alert-warning" role="alert">
        <%= alert %>
      </div>
      <% end %>
    <% if notice %>
      <div class="alert alert-info" role="alert">
        <%= notice %>
      </div>
    <% end %>

    <!-- yields to further views -->
    <%= yield %>
  </body>
</html>
