<%= form_for(@volunteer, html: {class: 'form-horizontal'}) do |f| %>

  <h2>Edit <%= "#{@volunteer.name}'s"%> Information </h2>

    <div class="field form-group">
      <%= f.label :tel, "Telephone Number", class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :tel, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :email, "Email", class: 'col-sm-2 control-label'%>
      <div class="col-sm-10">
        <%= f.text_field :email, class: 'form-control'%>
      </div>
    </div>

    <div class="actions form-group">

      <div class="col-sm-2-offset-2 col-sm-10">
        <%= f.submit "Submit Edits"%>
      </div>
    </div>

<% end %>
